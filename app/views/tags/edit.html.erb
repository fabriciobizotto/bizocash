<%- model = Tag %>

<div class="flex w-full">
  <div class="bg-white rounded shadow-2xl p-8 mt-4 w-full">
    <h1 class="block w-full text-center text-gray-800 text-2xl font-bold mb-6">
      <%= t('helpers.titles.edit', model: model.model_name.human.downcase) %>
    </h1>

    <%= render 'form', tag: @tag %>

    <%= link_to t('helpers.links.back'), tags_path, class: 'button bg-white-500 hover:bg-white-700 font-bold focus:outline-none py-2 focus:shadow-outline' %>
    
    <% if @tag.persisted? %>
      <%= link_to 'Delete', @tag, class: "button text-red-500 hover:text-red-700 font-bold focus:outline-none py-2 focus:shadow-outline", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
</div>