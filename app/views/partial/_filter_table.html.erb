<%= form_tag path, method: :get do |f| %>
    <span class="z-10 h-full leading-snug font-normal absolute text-center text-gray-300 absolute bg-transparent rounded text-base items-center justify-center w-8 pl-2 py-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd" />
        </svg>
    </span>
    <span class="z-10 h-full leading-snug font-normal absolute text-center text-gray-900 absolute bg-transparent rounded text-base items-center justify-center w-8 right-2 pr-2 py-2">
        <%= link_to path do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
            </svg>
        <% end %>
    </span>
    <%= text_field_tag :search, params[:search], placeholder: 'Pesquisar...', 
        class: 'px-2 py-2 placeholder-gray-600 text-gray-600 relative bg-white text-sm border border-gray-300 outline-none focus:outline-none focus:ring w-full pl-10' %>
    <!--<= submit_tag 'Pesquisar', name:nil %>-->
<% end %>