<%- model = Account %>

<%= form_with(model: account) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="flex mb-4">

    <div class="flex-1">
      <%= form.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-1" %>
      <%= form.text_field :name, autofocus:true, placeholder: :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border px-4 leading-tight focus:outline-none focus:bg-white" %>
    </div>

  </div>

  <div class="flex mb-4">

    <div class="flex-4">
      <%= form.check_box :active, placeholder: :active, class: "checked:bg-gray-900 checked:border-transparent d-flex" %>
      <%= model.human_attribute_name(:active) %>
    </div>

    <div class="flex-4 ml-4">
      <%= form.check_box :investment, placeholder: :investment, class: "checked:bg-gray-900 checked:border-transparent" %>
      <%= model.human_attribute_name(:investment) %>
    </div>

  </div>

  <div class="mb-6 flex">
    <%= form.button class: 'button bg-blue-500 hover:bg-blue-700 font-bold text-white focus:outline-none py-2 px-4  focus:shadow-outline' %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-default", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>