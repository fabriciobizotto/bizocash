<%= form_with(model: account) do |form| %>
  <%= render "shared/error_messages", resource: form.object %>

  <div class="flex -mx-3 mb-6">

    <div class="w-full flex-5 md:w-6/20 px-3 mb-6 md:mb-0">
      <%= form.label :name, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.text_field :name, placeholder: :name, class: "appearance-none block w-full bg-gray-200 text-gray-700 border py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white" %>
    </div>

    <div class="flex-1 px-1">
      <%= form.label :active, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.check_box :active, placeholder: :active, class: "checked:bg-gray-900 checked:border-transparent d-flex align-items-start" %>
    </div>

    <div class="flex-1 px-1">
      <%= form.label :investment, class: "block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2" %>
      <%= form.check_box :investment, placeholder: :investment, class: "checked:bg-gray-900 checked:border-transparent" %>
    </div>
    
  </div>

  <div class="mb-6 flex justify-between items-center">
    <%= form.button class: "btn btn-default" %>

    <% if form.object.persisted? %>
      <%= link_to 'Delete', form.object, class: "btn btn-default", method: :delete, data: { remote: true, confirm: "Are you sure?" } %>
    <% end %>
  </div>
<% end %>