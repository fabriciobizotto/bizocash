<%- model = Account %>

<div class="flex flex-col">
  <div class="-my-1 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-1 inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-600">

        <div class="bg-white pb-4 pl-4">
          <div class="flex pt-4">
            <%= link_to new_account_path, class: '' do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            <% end %>
            <p class="ml-3 text-2xl"><%= model.model_name.human.pluralize %></p>
          </div>
        </div>

        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
                <th scope="col" class="p-3 font-bold uppercase bg-gray-200 text-gray-600 hidden lg:table-cell"><%= model.human_attribute_name(:name) %></th>
                <th scope="col" class="p-3 font-bold uppercase bg-gray-200 text-gray-600 hidden lg:table-cell"><%= model.human_attribute_name(:active) %></th>
                <th scope="col" class="p-3 font-bold uppercase bg-gray-200 text-gray-600 hidden lg:table-cell"><%= model.human_attribute_name(:investment) %></th>
                <th scope="col" class="p-3 font-bold uppercase bg-gray-200 text-gray-600 hidden lg:table-cell">Ações</th>
            </tr>
          </thead>

          <tbody class="bg-white divide-y divide-gray-200">
            <% @accounts.each do |account| %>
              <%= content_tag :tr, id: dom_id(account), class: 'bg-white lg:hover:bg-gray-100 flex lg:table-row flex-row lg:flex-row flex-wrap lg:flex-no-wrap mb-10 lg:mb-0' do %>
                <td class="w-full lg:w-auto p-3 text-gray-800 border border-b text-center border border-b text-center block lg:table-cell relative lg:static">
                    <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase"><%= model.human_attribute_name(:name) %></span>
                    <%= account.name %>
                </td>
                <td class="w-full lg:w-auto p-3 text-gray-800 border border-b text-center border border-b text-center block lg:table-cell relative lg:static">
                    <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase"><%= model.human_attribute_name(:active) %></span>
                    <%= account.active %>
                </td>
                <td class="w-full lg:w-auto p-3 text-gray-800 border border-b text-center border border-b text-center block lg:table-cell relative lg:static">
                    <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase"><%= model.human_attribute_name(:investment) %></span>
                    <%= account.investment %>
                </td>

                <td class="w-full lg:w-auto p-3 text-gray-800 block text-center border border-b lg:table-cell relative lg:static">
                    <span class="lg:hidden absolute top-0 left-0 bg-blue-200 px-2 py-1 text-xs font-bold uppercase">Actions</span>
                    <%= link_to 'Edit', account, class: 'text-blue-400 hover:text-blue-600 underline' %>
                    <%= link_to 'Delete', account_path(account), method: :delete, class: 'text-blue-400 hover:text-blue-600 underline' %>
                </td>
              <% end %>
            <% end %>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>